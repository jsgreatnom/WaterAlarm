<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="103.5dp"
    android:orientation="vertical"
    android:background="#ffffff" >
    
    <ImageView
        android:id="@+id/market_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp" 
        android:scaleType="fitXY"
        />
    
    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="20dp"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal"
	    android:background="#c8c8c8" >
	    
        <CheckBox 
            android:id="@+id/day_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:tag="common_do_not_open_today"
            android:text="@string/common_do_not_open_today"
            android:textSize="10.5sp"
            android:textColor="#5c5c5c"
            android:button="@drawable/selector_btn_today_check"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/close_btn"
            android:tag="common_close"
            android:text="@string/common_close"
            android:textSize="10.5sp"
            android:textColor="#5c5c5c"
            android:gravity="center"
            />
        
        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_close2"
            />
    	    
        
    </RelativeLayout>
    

</RelativeLayout>
