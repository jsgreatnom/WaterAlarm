<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/alarm_on_off"
        android:layout_width="32dp"
        android:layout_height="32.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ico_alarm_off" />

    <LinearLayout
        android:id="@+id/alarm_setting_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="19dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/alarm_am"
                android:layout_width="28dp"
                android:layout_height="17dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ico_am_off1"
                android:gravity="center"
                android:tag="water_alarm_am"
                android:text="@string/water_alarm_am"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/alarm_pm"
                android:layout_width="28dp"
                android:layout_height="17dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/ico_am_off1"
                android:gravity="center"
                android:tag="water_alarm_pm"
                android:text="@string/water_alarm_pm"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.dev.team.util.LetterSpacingTextView
                android:id="@+id/alarm_clock_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:gravity="center"
                android:text="00:00"
                android:textColor="#bbbcbd"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6.5dp"
                android:orientation="horizontal" 
                android:gravity="center">

                <TextView
                    android:id="@+id/alarm_sunday"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:gravity="center_horizontal"
                    android:tag="water_alarm_sun"
                    android:text="@string/water_alarm_sun"
                    android:textColor="#bbbcbd"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/alarm_monday"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:gravity="center_horizontal"
                    android:tag="water_alarm_mon"
                    android:text="@string/water_alarm_mon"
                    android:textColor="#bbbcbd"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/alarm_tuesday"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:gravity="center_horizontal"
                    android:tag="water_alarm_tue"
                    android:text="@string/water_alarm_tue"
                    android:textColor="#bbbcbd"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/alarm_wednesday"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:gravity="center_horizontal"
                    android:tag="water_alarm_wed"
                    android:text="@string/water_alarm_wed"
                    android:textColor="#bbbcbd"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/alarm_thursday"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:gravity="center_horizontal"
                    android:tag="water_alarm_thu"
                    android:text="@string/water_alarm_thu"
                    android:textColor="#bbbcbd"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/alarm_friday"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:gravity="center_horizontal"
                    android:tag="water_alarm_fri"
                    android:text="@string/water_alarm_fri"
                    android:textColor="#bbbcbd"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/alarm_saturday"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:gravity="center_horizontal"
                    android:tag="water_alarm_sat"
                    android:text="@string/water_alarm_sat"
                    android:textColor="#bbbcbd"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/alarm_add"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/ico_add" />
    </LinearLayout>

</LinearLayout>