<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="39dp"
        android:background="#47aed9" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:tag="water_alarm_sounds"
            android:text="@string/water_alarm_sounds"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_top_btn_before" />
        
        <Button
            android:id="@+id/btn_volume"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/volume"
            />
    </RelativeLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/water_sound_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp" />

        <Button
            android:id="@+id/water_sound_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.5dp"
            android:layout_marginRight="13.5dp"
            android:layout_marginBottom="59dp"
            android:layout_gravity="bottom"
            android:tag="water_alarm_save"
            android:text="@string/water_alarm_save"
            android:background="@drawable/btn_bottom_bg" />

        <com.mocoplex.adlib.AdlibAdViewContainer
            android:id="@+id/layout_adview"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            isDefaultBanner="true" />

    </FrameLayout>

</LinearLayout>
