<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#3b9ec7" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="39dp"
        android:background="#42a5ce"
        android:orientation="horizontal"
        android:paddingTop="6dp" >

        <ToggleButton
            android:id="@+id/tbtn_statistic_01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_statistic_tab_radius_bg"
            android:checked="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/selector_statistic_tab_text_color"
            android:textOff="@string/statistic_fragment_drink_title"
            android:textOn="@string/statistic_fragment_drink_title"
            android:tag="statistic_fragment_drink_title"
            android:textSize="15sp" />

        <ToggleButton
            android:id="@+id/tbtn_statistic_02"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_statistic_tab_radius_bg"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/selector_statistic_tab_text_color"
            android:textOff="@string/statistic_fragment_kind_title"
            android:textOn="@string/statistic_fragment_kind_title"
            android:tag="statistic_fragment_kind_title"
            android:textSize="15sp" />

        <ToggleButton
            android:id="@+id/tbtn_statistic_03"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_statistic_tab_radius_bg"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/selector_statistic_tab_text_color"
            android:textOff="@string/statistic_fragment_weight_title"
            android:textOn="@string/statistic_fragment_weight_title"
            android:tag="statistic_fragment_weight_title"
            android:textSize="15sp" />
    </LinearLayout>    

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_drink"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_kind"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" />

        <com.dev.team.ui.CustomViewPager
            android:id="@+id/viewpager_weight"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>